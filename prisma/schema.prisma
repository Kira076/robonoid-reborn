generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Guild {
  id        String   @id
  name      String?
  prefix    String   @default("!")
  directoryMessageId String?
  directoryChannelId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  transformations Transformation[]
}

model User {
  id        String   @id
  guildId   String
  points    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  guild     Guild    @relation(fields: [guildId], references: [id])

  @@unique([id, guildId])
}

model Transformation {
  id          String   @id @default(cuid())
  guildId     String
  name        String   // e.g., "sailor-moon", "madoka"
  channelMappings ChannelMapping[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  guild       Guild    @relation(fields: [guildId], references: [id])

  @@unique([guildId, name])
}

model ChannelMapping {
  id               String         @id @default(cuid())
  transformationId String
  channelId        String
  newName          String
  transformation   Transformation @relation(fields: [transformationId], references: [id], onDelete: Cascade)

  @@unique([transformationId, channelId])
}
